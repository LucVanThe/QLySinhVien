@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Admin_Index";
    var email = Context.Session.GetString("Email");

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trang Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Admin/dist/css/adminlte.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/summernote/summernote-bs4.min.css">
    <!-- CodeMirror -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/codemirror/codemirror.css">
    <link rel="stylesheet" href="~/Content/Admin/plugins/codemirror/theme/monokai.css">
    <!-- SimpleMDE -->
    <link rel="stylesheet" href="~/Content/Admin/plugins/simplemde/simplemde.min.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/Admin/plugins/fontawesome-free/css/all.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Admin/dist/css/adminlte.min.css")" />

</head>


<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                       
                    </a>
                    <div class="navbar-search-block">
                       
                    </div>
                </li>


                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    @if (!string.IsNullOrEmpty(email))
                    {
                        <a asp-action="Logout" asp-controller="Account" class="nav-link"><i class="fa fa-sign-out"></i> Logout</a>
                    }
                    else
                    {
                        <a asp-action="Login" asp-controller="Account" class="nav-link"><i class="fa fa-sign-in"></i> Login</a>
                    }

                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="~/Content/Admin/index3.html" class="brand-link">
                <img src="~/Content/Admin/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Trang Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                      
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Students")" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Quản lý sinh viên
                                   
                                </p>
                            </a>                            
                        </li>

                      
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Teachers")" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Quản lý giáo viên</p>
                            </a>
                        </li>

                       
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Courses")" class="nav-link">
                                <i class="nav-icon far fa-calendar-alt"></i>
                                <p>Quản lý môn học</p>
                            </a>
                        </li>

                       
                        <li class="nav-item">
                            <a href="@Url.Action("DangKyMonHoc","Enrollments")" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p> Đăng ký môn học</p>
                            </a>
                        </li>

                   
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Classes")" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Quản lý lớp học 
                                    
                                </p>
                            </a>                          
                        </li>

                                       
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Scores")" class="nav-link">
                                <i class="nav-icon far fa-calendar-alt"></i>
                                <p>
                                    Quản lý điểm
                                  
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Tests")" class="nav-link">
                                <i class="nav-icon far fa-calendar-alt"></i>
                                <p>
                                    Quản lý kiểm tra
                                  
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a href="#" class="nav-link ">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Quản lý tài khoản
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Teacher")" class="nav-link ">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tài khoản giáo viên</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","StudentAcc")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tài khoản sinh viên</p>
                                    </a>
                                </li>                              
                            </ul>
                        </li>
                    </ul>
                </nav>

                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.2.0-rc
            </div>
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Content/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/Admin/dist/js/adminlte.min.js"></script>
    <!-- Summernote -->
    <script src="~/Content/Admin/summernote/summernote-bs4.min.js"></script>
    <!-- CodeMirror -->
    <script src="~/Content/Admin/codemirror/codemirror.js"></script>
    <script src="~/Content/Admin/codemirror/mode/css/css.js"></script>
    <script src="~/Content/Admin/codemirror/mode/xml/xml.js"></script>
    <script src="~/Content/Admin/codemirror/mode/htmlmixed/htmlmixed.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
<style>
    .main-sidebar {
        position: fixed !important;
        top: 0;
        left: 0;
        height: 100vh;
        overflow-y: auto;
    }

    .content-wrapper {
        margin-left: 100%;
    }
</style>


