@model QLySinhVien.ViewModel.EditScoreVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-3">Sửa điểm</h2>
            <hr />

            <form asp-action="Edit" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ScoreID" />
                <input type="hidden" asp-for="TestID" />
                <input type="hidden" asp-for="StudentID" />
                <div class="form-group">
                    <label>Tên sinh viên</label>
                    <input class="form-control" value="@Model.StudentName" readonly />
                </div>

                <div class="form-group">
                    <label>Tên bài kiểm tra</label>
                    <input class="form-control" value="@Model.TestName" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Marks"></label>
                    <input asp-for="Marks" class="form-control" />
                    <span asp-validation-for="Marks" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-action="StudentScores" asp-route-testId="@Model.TestID" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
